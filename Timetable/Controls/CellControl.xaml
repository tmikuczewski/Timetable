<UserControl x:Class="Timetable.Controls.CellControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Timetable.Controls"
			 mc:Ignorable="d" 
			 d:DesignHeight="100" d:DesignWidth="100" FontSize="16">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Border BorderBrush="{x:Null}">
			<TextBlock x:Name="textBlockFirstRow" TextWrapping="Wrap" Text="FirstRow" VerticalAlignment="Center" TextAlignment="Center" FontSize="13.333"/>
		</Border>
		<Border BorderBrush="{x:Null}" Grid.Row="1">
			<TextBlock x:Name="textBlockSecondRow" TextWrapping="Wrap" Text="SecondRow" VerticalAlignment="Center" TextAlignment="Center" FontSize="13.333"/>
		</Border>
		<Border BorderBrush="{x:Null}" Grid.Row="2">
			<TextBlock x:Name="textBlockThirdRow" TextWrapping="Wrap" Text="ThirdRow" VerticalAlignment="Center" TextAlignment="Center" FontSize="13.333"/>
		</Border>

	</Grid>
</UserControl>
