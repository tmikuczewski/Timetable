<UserControl x:Class="Timetable.Controls.SubjectControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Timetable.Controls"
			 mc:Ignorable="d" 
			 d:DesignHeight="85.805" d:DesignWidth="300" MinHeight="30" Height="30" MinWidth="300" Width="Auto" MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
	<Grid x:Name="gridMain">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="3*"/>
			<ColumnDefinition Width="7*"/>
		</Grid.ColumnDefinitions>
		<Border BorderBrush="{x:Null}" Height="30" Grid.Column="0" Margin="0,0,5,0">
			<CheckBox x:Name="checkBox" Content="" Focusable="False" VerticalAlignment="Center" Margin="5,0,0,0"/>
		</Border>
		<Border BorderBrush="{x:Null}" Grid.Column="1" Height="30" Margin="0,0,5,0">
			<TextBlock x:Name="textBlockId" TextWrapping="Wrap" Text="999999999" VerticalAlignment="Center" HorizontalAlignment="Center"/>
		</Border>
		<Border BorderBrush="{x:Null}" Grid.Column="2" Height="30">
			<TextBlock x:Name="textBlockName" TextWrapping="Wrap" Text="12345678901" VerticalAlignment="Center" HorizontalAlignment="Center"/>
		</Border>
	</Grid>
</UserControl>
